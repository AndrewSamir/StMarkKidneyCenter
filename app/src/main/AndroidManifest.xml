<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samir.andrew.stmarkkidneycenter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".activities.PatientActivity"
            android:label="@string/title_activity_patient"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.BloodTransfusionActivity"
            android:label="@string/title_activity_blood_transfusion"
            android:parentActivityName=".activities.PatientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
        <activity
            android:name=".activities.PersonalDataActivity"
            android:label="@string/title_activity_personal_data"
            android:parentActivityName=".activities.PatientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
        <activity
            android:name=".activities.MedicalHistoryActivity"
            android:label="@string/title_activity_medical_history"
            android:parentActivityName=".activities.PatientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
        <activity
            android:name=".activities.PastDiseasesHistoryActivity"
            android:label="@string/title_activity_past_diseases_history"
            android:parentActivityName=".activities.PatientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
        <activity
            android:name=".activities.PreviousDialysisActivity"
            android:label="@string/title_activity_previous_dialysis"
