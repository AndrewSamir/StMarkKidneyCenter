                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
        <activity
            android:name=".activities.VascularAccessHistoryActivity"
            android:label="@string/title_activity_vascular_access_history"
            android:parentActivityName=".activities.PatientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
        <activity
            android:name=".activities.ViralStateActivity"
            android:label="@string/title_activity_viral_state"
            android:parentActivityName=".activities.PatientActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samir.andrew.stmarkkidneycenter.activities.PatientActivity" />
        </activity>
    </application>

</manifest>